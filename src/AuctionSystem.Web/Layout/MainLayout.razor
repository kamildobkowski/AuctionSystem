@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_darkMode" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    
    <MudDrawer @bind-Open="_drawerOpen" Anchor="Anchor.Left" Elevation="1"
               ClipMode="DrawerClipMode.Never" Variant="DrawerVariant.Responsive">
        <NavMenu OnNavigate="@(()=> _drawerOpen = false)" />
    </MudDrawer>

    <MudMainContent>
        <TopNavBar OnMenuClick="ToggleDrawer" @bind-Dark="_darkMode" />
        <MudContainer MaxWidth="MaxWidth.Large" Class="px-4 py-6">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

@code {
    private bool _drawerOpen = false;
    private bool _darkMode = false;

    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;
}